<a class="root-container @Class" href=@Url target=@(IsUrlExternal ? "_blank" : "_self")>
    <div class="root">
        <img class="icon icon-img" src="@Icon" alt="@Name"/>

        <div class="text-container">
            <span class="@(HasSubName ? "primary-name" : "name")">@Name</span>
            @if (HasSubName)
            {
                <span class="sub-name">@SubName</span>
            }
        </div>
    </div>
</a>

@code {
    [Parameter]
    public string Class { get; set; } = string.Empty;

    [Parameter]
    public required string Name { get; set; }

    [Parameter]
    public string SubName { get; set; } = string.Empty;
    public bool HasSubName => !string.IsNullOrEmpty(SubName);

    [Parameter]
    public required string Icon { get; set; }

    [Parameter]
    public required string Url { get; set; }
    public bool IsUrlExternal => Url.StartsWith("http://") || Url.StartsWith("https://");
}